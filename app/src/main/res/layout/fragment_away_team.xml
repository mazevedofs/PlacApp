<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   tools:context=".ui.game.event.EventFragment">
    <TextView
            android:text="Time visitante"
            style="@style/title_game_wizard"
            android:id="@+id/textView"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="32dp"/>
    <EditText
            style="@style/input_wizard"
            android:id="@+id/inputAwayTeam"
            app:layout_constraintStart_toStartOf="@+id/textView" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/textView2" app:layout_constraintEnd_toEndOf="@+id/textView"
            android:hint="Ex: Itália"/>
    <TextView
            android:text="Qual o time visitante?"
            style="@style/subtitle_game_wizard"

            android:id="@+id/textView2" app:layout_constraintStart_toStartOf="@+id/textView"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            android:layout_marginTop="16dp" app:layout_constraintEnd_toEndOf="@+id/textView"/>
    <Button
            android:text="Próximo"
            style="@style/custom_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/btNext"
            app:layout_constraintTop_toBottomOf="@+id/inputAwayTeam" android:layout_marginTop="32dp"
            app:layout_constraintStart_toStartOf="@+id/textView" app:layout_constraintEnd_toEndOf="@+id/textView"/>
</androidx.constraintlayout.widget.ConstraintLayout>